{
    "name": "husam-awadhi/actions-cli",
    "description": "simple cli tool to with a modular design",
    "type": "tool",
    "require": {
        "php": ">=7.4.15",
        "monolog/monolog": "^2.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    }
}